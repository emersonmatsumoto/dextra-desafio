@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="row">
    <div class="col-md-3">
        <h1>Lanches</h1>
    </div>    
</div>
<div class="row">
    
    @foreach (var lanche in Model.Lanches)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/images/@(lanche.Nome).jpg" class="img-rounded img-responsive" />
                <div class="caption">
                    <h3>@lanche.Nome</h3>
                    <h4>@lanche.Total</h4>
                    <p style="min-height: 50px">
                        @string.Join(", ", lanche.Ingredientes.Select(s => s.Nome))
                    </p>
                    <p><a href="#" class="btn btn-primary" role="button">Comprar</a></p>
                </div>
            </div>
        </div>
    }

</div>
