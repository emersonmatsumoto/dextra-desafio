@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="row">
    <div class="col-md-3">
        <h1>Lanches</h1>
    </div>    
</div>
<div class="row">
    
    <form method="post" action="/personalizar">
        @Html.AntiForgeryToken()
        @foreach (var lanche in Model.Lanches)
        {
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="~/images/@(lanche.Nome).jpg" class="img-rounded img-responsive" />
                    <div class="caption">
                        <h3>@lanche.Nome</h3>
                        <h4>@lanche.Total.ToString("C")</h4>
                        <p style="min-height: 50px">
                            @string.Join(", ", lanche.Ingredientes.Select(s => s.Nome))
                        </p>
                        <p>
                            <button class="btn btn-primary" type="submit" name="compra" value="@lanche.Id">Comprar</button>
                        </p>
                    </div>
                </div>
            </div>
        }
    </form>
</div>
